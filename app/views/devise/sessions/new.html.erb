<section class="section has-text-white has-text-centered login">
  <h2 class="is-size-2 has-text-weight-bold">Login</h2>
  <br />
  <div class="columns is-mobile is-centered">
    <div class="column is-full-mobile is-half-desktop">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <p class="control has-icons-left">
            <%= f.email_field :email, class: "input is-medium", autofocus: true, autocomplete: "off", placeholder: "E-mail" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <p class="control has-icons-left">
            <%= f.password_field :password, class: "input is-medium", autocomplete: "off", placeholder: "Senha" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <p class="control">
              <%= f.label :remember_me, class: "checkbox" do %>
                <%= f.check_box :remember_me %>
                Lembrar de mim
              <% end %>
            </p>
          </div>
        <% end -%>

        <div class="field">
          <p class="control">
            <%= f.submit "Entrar", class: "button is-primary is-fullwidth is-rounded is-medium" %>
          </p>
        </div>
      <% end %>
      <div class="container devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
